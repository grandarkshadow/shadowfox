<body>

<h1>ğŸ¦ Online Banking Dashboard</h1>

<div class="box">
    <h2>Create Account</h2>
    <label>Name: <input id="name" placeholder="Enter name" /></label>
    <label>Initial Balance: <input id="balance" type="number" placeholder="e.g. 1000" /></label>
    <button onclick="createAccount()">Create</button>
    <p id="createResult"></p>
</div>

<div class="box">
    <h2>All Accounts</h2>
    <button onclick="getAccounts()">ğŸ“„ Load Accounts</button>
    <ul id="accountsList"></ul>
</div>

<div class="box">
    <h2>Transfer Funds</h2>
    <label>From ID: <input id="fromId" type="number" /></label>
    <label>To ID: <input id="toId" type="number" /></label>
    <label>Amount: <input id="amount" type="number" /></label>
    <button onclick="transfer()">ğŸ’¸ Transfer</button>
    <p id="transferResult"></p>
</div>

<script>
    function createAccount() {
      const name = document.getElementById("name").value;
      const balance = document.getElementById("balance").value;
      fetch("/api/accounts", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, balance })
      })
      .then(res => res.json())
      .then(data => document.getElementById("createResult").innerText = "âœ… Account created: ID " + data.id);
    }

    function getAccounts() {
      fetch("/api/accounts")
        .then(res => res.json())
        .then(data => {
          const list = document.getElementById("accountsList");
          list.innerHTML = "";
          data.forEach(acc => {
            list.innerHTML += `<li>ID: ${acc.id}, Name: ${acc.name}, Balance: â‚¹${acc.balance}</li>`;
          });
        });
    }

    function transfer() {
      const fromId = document.getElementById("fromId").value;
      const toId = document.getElementById("toId").value;
      const amount = document.getElementById("amount").value;
      fetch(`/api/transfer?fromId=${fromId}&toId=${toId}&amount=${amount}`, {
        method: "POST"
      })
      .then(res => res.text())
      .then(data => document.getElementById("transferResult").innerText = data);
    }
</script>

</body>
</html>
